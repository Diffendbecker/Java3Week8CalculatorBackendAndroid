<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#0099cc"
             tools:context=".FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edt1" android:textAlignment="textEnd" android:singleLine="true"
    />
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_marginTop="46dp"
            android:layout_height="63dp" android:id="@+id/buttonPlus" android:textAlignment="center"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
    />
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="46dp"
            android:layout_height="63dp" android:id="@+id/buttonMinus" android:textAlignment="center"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
    />
    <Button
            android:text="x"
            android:layout_width="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:layout_height="63dp"
            android:id="@+id/buttonMultiply" android:textAlignment="center"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
    />
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:layout_height="63dp"
            android:id="@+id/buttonDivide" android:textAlignment="center"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
    />
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_marginTop="108dp"
            android:layout_height="63dp" android:id="@+id/button7" android:textAlignment="center"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
    />
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="108dp"
            android:layout_height="63dp" android:id="@+id/button8" android:textAlignment="center"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
    />
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="108dp"
            android:layout_height="63dp"
            android:id="@+id/button9" android:textAlignment="center"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
    />
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="243dp"
            android:layout_marginLeft="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="108dp"
            android:id="@+id/buttonEquals" android:textAlignment="center"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
    />
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_marginTop="170dp"
            android:layout_height="63dp" android:id="@+id/button4" android:textAlignment="center"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
    />
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="170dp"
            android:layout_height="63dp" android:id="@+id/button5" android:textAlignment="center"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
    />
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:layout_height="63dp"
            android:id="@+id/button6" android:textAlignment="center"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
    />
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_marginTop="232dp"
            android:layout_height="63dp" android:id="@+id/button1" android:textAlignment="center"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
    />
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="232dp"
            android:layout_height="63dp" android:id="@+id/button2" android:textAlignment="center"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
    />
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="232dp"
            android:layout_height="63dp"
            android:id="@+id/button3" android:textAlignment="center"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
    />
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_marginTop="294dp"
            android:layout_height="63dp" android:id="@+id/button0" android:textAlignment="center"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
    />
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="294dp"
            android:layout_height="63dp" android:id="@+id/buttonDot" android:textAlignment="center"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
    />
    <Button
            android:text="AC"
            android:layout_width="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="294dp"
            android:layout_height="63dp"
            android:id="@+id/buttonAc" android:textAlignment="center"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button" android:textSize="18sp"
    />
</FrameLayout>